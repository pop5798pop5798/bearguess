@model SITDto.ViewModel.SettingListDto


<div class="container">
    <div class="row">

        <div class="form-horizontal">
            <h4>總彩池</h4>
            <hr />
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "dgonForm" }))
            {
                @Html.AntiForgeryToken()
                foreach (var v in Model.gamesettingList)
                {
                    @Html.HiddenFor(model => model.gamesettingList[0].sn)
                    @Html.HiddenFor(model => model.gamesettingList[0].title)
                    <div class="form-group">
                        @Html.LabelFor(model => model.gamesettingList[0].outlay, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.gamesettingList[0].outlay, new { htmlAttributes = new { @class = "form-control form_datetime", @style = "color:#ffdc11" } })
                            @Html.ValidationMessageFor(model => model.gamesettingList[0].outlay, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.gamesettingList[0].allocation, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.gamesettingList[0].allocation, new { htmlAttributes = new { @class = "form-control form_datetime", @style = "color:#ffdc11" } })
                            @Html.ValidationMessageFor(model => model.gamesettingList[0].allocation, "", new { @class = "text-danger" })
                        </div>
                    </div>
                }


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" id="dgongo" value="保存" class="btn btn-default" />
                    </div>
                </div>

            }



        </div>


        </div>
    </div>




















