@model IEnumerable<SITW.Models.ViewModel.GamePostViewModel>


@{
    ViewBag.Title = "遊戲大廳| 熊i猜";
    string date = DateTime.Now.ToString("MMddmm");
    var poolall = ViewData["poolall"] as string[];

}


