@model SITW.Models.ViewModel.RankRewardViewModel

@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_Layout_admin.cshtml";

}




<section id="main-content">
    <section class="wrapper">
        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <h4><i class="fa fa-angle-right"></i> 排行獎勵管理</h4>                                           
                        <thead>
                            <tr>
                                <th> 主標題 </th>
                                <th class="hidden-phone">競猜賽季</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RewardTitle)
                            {
                                <tr>
                                    @if (item.title != null)
                                    {
                                     <td>@Html.DisplayFor(modelItem => item.title)</td>
                                    }
                                    else
                                    {
                                        <td>暫無</td>
                                    }
                                    @if (item.starttime != null)
                                    {
                                    <td>@Html.DisplayFor(modelItem => item.starttime)</td>
                                    }
                                    else
                                    {

                                        <td >即日起</td>
                                    }


                                    <td class="hidden-phone">@Html.DisplayFor(modelItem => item.endtime)</td>
                                    
                                    <td>

                                        
                                        <button class="btn btn-primary btn-xs fa fa-pencil" onclick="location.href='@Url.Action("EditTitle",new { id = item.Id })'"></button>
                                        
                                    </td>
                                </tr>
                            }



                        </tbody>
                       
                        <thead>
                            <tr>
                                <th><i class="fa fa-bullhorn"></i> 排名</th>
                                <th class="hidden-phone"><i class="fa fa-question-circle"></i> 獎勵</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RewardData)
                            {
                                <tr>
                                    <td><a href="basic_table.html#">@Html.DisplayFor(modelItem => item.ranknumber)</a></td>
                                    <td class="hidden-phone">@Html.DisplayFor(modelItem => item.rankcontent)</td>
                                    <td>

                                        <button class="btn btn-primary btn-xs fa fa-pencil" onclick="location.href='@Url.Action("Edit",new { id = item.Id })'"></button>
                                        <button class="btn btn-danger btn-xs fa fa-trash-o" onclick="location.href='@Url.Action("Delete",new { id = item.Id })'"></button>
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                    
                </div><!-- /content-panel -->
                
            </div><!-- /col-md-12 -->
            
                <div class=" add-task-row">
                    <a class="btn btn-success btn-sm pull-left" href="@Url.Action("Create")">新增獎勵</a>   
                    <a class="btn btn-success btn-sm pull-left" href="@Url.Action("News","Home")">查看獎勵頁</a>    
                </div>
               
            </div><!-- /row -->
    </section>
</section>