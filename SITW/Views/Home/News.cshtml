@{
    ViewBag.Title = "排行榜| 熊i猜";

}
<script type="application/ld+json">
    {
    "@@context": "http://schema.org",
    "@@type": "BreadcrumbList",
    "itemListElement": [{
    "@@type": "ListItem",
    "position": 1,
    "item": {
    "@@id": "http://funbet.com.tw/",
    "name": "首頁",
    "image": "http://funbet.com.tw/Content/images/logo-1.png"
    }
    },{
    "@@type": "ListItem",
    "position": 2,
    "item": {
    "@@id": "http://funbet.com.tw/Home/News",
    "name": "排行榜"
    }
    }]
    }
</script>




<div class="sportsmagazine-main-content" id="rankmagin">
    <div class="sportsmagazine-main-section sportsmagazine-account-full">
        <div id="containercss" class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="sportsmagazine-account-tabs">
                        <ul class="nav-tabs" role="tablist">     
                            <li role="presentation" class="active"><a href="#ranking2" aria-controls="ranking2" role="tab" data-toggle="tab">排行榜</a></li>
                            <li role="presentation"><a href="#ranking" aria-controls="ranking" role="tab" data-toggle="tab">排行榜獎勵</a></li>                        
                        </ul>
                        <div class="tab-content">                           
                            <div role="tabpanel" class="tab-pane" id="ranking">
                                @Html.Action("_RankReward", "RankReward")
                            </div>
                            <div role="tabpanel" class="tab-pane active" id="ranking2">
                                <div class="sportsmagazine-account">
                                    @Html.Action("_Rank", "Ranking", new { cycle = 10, num = 100, unitSn = 1 })

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
@section Scripts {

    <script src="/Scripts/jquery.dataTables.min.js"></script>
    <script src="/Scripts/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#newshome').addClass("active");

            $('#example').DataTable({
                "order": [[1, "desc"]], "ordering": false, "paging": true, "info": false, "searching": false,
                "language": {
                    "lengthMenu": "_MENU_ ",
                    "info": "目前 _START_ to _END_ 共 _TOTAL_ 人", "paginate": {
                        "next": "", "previous": ""
                    }
                }
            });


                
            $("#rankpage").css("color", "#e4b12a");
                $("#missionpage").click(function () {
                    $("#missionpage").css("color", "#e4b12a");
                    $("#rankpage").css("color", "#ebdec2");
                    $("#betpage").css("color", "#ebdec2");
                });

            $("#betpage").click(function () {
                $("#missionpage").css("color", "#ebdec2");
                $("#rankpage").css("color", "#ebdec2");
                $("#betpage").css("color", "#e4b12a");

            });





        });
</script>





} 
