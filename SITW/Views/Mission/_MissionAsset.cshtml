@model SITW.Models.ViewModel.MissionViewModel
@{
    Layout = null;
    int i = ViewBag.index ?? 0;
}
@using SITW.Helper

    
<div name="divMissionAsset" class="form-horizontal">
    <h4>MissionAssets</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => Model.MissionAssetList[i].assets, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => Model.MissionAssetList[i].assets, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model.MissionAssetList[i].assets, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => Model.MissionAssetList[i].unitSn, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.UnitSelect("MissionAssetList[" + i + "].unitSn", Model.MissionAssetList[i].unitSn)
            @Html.ValidationMessageFor(model => Model.MissionAssetList[i].unitSn, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="offset-md-2 col-md-10">
            <button type="button" class="btn btn-danger" name="btnDelete" onclick="deleteMissionStartEnd(this)">Delete</button>
        </div>
    </div>
</div>
