        {
            using (Html.BeginForm("Create", "bet", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.DisplayFor(model => c.choiceStr) @Html.DisplayFor(model => c.Odds)
                @*@Html.Label(BetList.Where(p => p.choiceSn == c.sn).Sum(o => o.money).ToString())*@
