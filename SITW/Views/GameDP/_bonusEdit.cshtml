@model SITW.Models.ViewModel.GamePostViewModel
@{
    Layout = null;
    int i = ViewBag.index ?? 0;  
    // int unitSn = Model.game.topicList[ti].choiceList[ci].betMoney[i].unitSn;
}



<div name="bonusDiv" class="form-horizontal">
    @Html.HiddenFor(model => model.game.bonusList[i].sn)
    <div class="form-group">
        @Html.LabelFor(model => model.game.bonusList[i].Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <label class="control-label" style="text-align: left;">
                @Html.EditorFor(model => model.game.bonusList[i].Quantity, new { htmlAttributes = new { @class = "form-control", @name = "topicList[0]" } })
                @Html.ValidationMessageFor(model => model.game.bonusList[i].Quantity, "", new { @class = "text-danger" })

            </label>
        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.game.bonusList[i].BonusRatio, htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-3">
            @Html.EditorFor(model => model.game.bonusList[i].BonusRatio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.game.bonusList[i].BonusRatio, "", new { @class = "text-danger" })
        </div>

        @Html.LabelFor(model => model.game.bonusList[i].bonus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.CheckBoxFor(model => model.game.bonusList[i].bonus)
            @Html.ValidationMessageFor(model => model.game.bonusList[i])
        </div>

    </div>
    @Html.HiddenFor(model => model.game.bonusList[i].pool)
    @Html.ValidationMessageFor(model => model.game.bonusList[i].pool, "", new { @class = "text-danger" })



</div>
<hr>
