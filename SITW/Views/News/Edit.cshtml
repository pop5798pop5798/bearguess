@model SITW.Models.placard

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
@using SITW.Helper
<style>
    input[type="text"] {
        height: auto;
    }
    #cke_10 {
        display: none;
    }
    textarea {
        color: #ebdec2;
    }
</style>



<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> 公告管理</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> 公告修改區</h4>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">                          
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                <div class="col-md-2" style="float:none">
                                    <h4>標題</h4>
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2" style="float:none">
                                    <h4>標題圖1024*640(目前只能連結)</h4>
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.image, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-2">
                                    <h4>內容</h4>
                                    <br>
                                </div>
                                <div class="col-md-12">
                                    <div class="row-fluid">
                                        <div class="col-md-10" id="content">
                                            <div class="row-fluid">
                                                <!-- block -->
                                                <div class="block">
                                                    <div class="block-content collapse in">
                                                        @Html.TextAreaFor(model => model.content, new { htmlAttributes = new { cols = "20", rows = "15" } })
                                                        @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <!-- /block -->
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>



                            
                        

                            <div class="col-md-10">
                                <h4>公告開始時間(立即發佈請略過)</h4>
                                @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
                                <h4>公告結束時間(暫無作用)</h4>
                                @Html.EditorFor(model => model.endtime, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.endtime, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-10">                              
                                <h4>公告類別</h4>
                                <div class="col-md-10">                                  
                                   
                                    @Html.NewsSelect("p_class", Model.p_class)
                                     @Html.ValidationMessageFor(model => model.p_class, "", new { @class = "text-danger" })
                                </div>

                            </div>                          
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="修改" class="btn btn-success btn-sm pull-left" />
                                    </div>
                                </div>
                            </div>
                    }

                    <div>
                        @Html.ActionLink("返回", "_News")
                    </div>
                </div>
            </div>
        </div>

    </section>
</section>
