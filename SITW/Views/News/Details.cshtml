@model SITW.Models.placard

@{
    ViewBag.Title = Model.title + "|熊i猜";
}
<script type="application/ld+json">
    {
    "@@context": "http://schema.org",
    "@@type": "BreadcrumbList",
    "itemListElement": [{
    "@@type": "ListItem",
    "position": 1,
    "item": {
    "@@id": "http://funbet.com.tw/",
    "name": "首頁",
    "image": "http://funbet.com.tw/Content/images/logo-1.png"
    }
    },{
    "@@type": "ListItem",
    "position": 2,
    "item": {
    "@@id": "http://funbet.com.tw/News/",
    "name": "最新公告"
    }
    },{
    "@@type": "ListItem",
    "position": 3,
    "item": {
    "@@id": "http://funbet.com.tw/News/Details/@Model.Id",
    "name": "@ViewBag.Class"
    }
    }]
    }
</script>
<link rel="stylesheet" href="https://unpkg.com/viewerjs/dist/viewer.css">
<script src="https://unpkg.com/viewerjs/dist/viewer.js"></script>
<script src="~/Scripts/jquery-viewer/jquery-viewer.js"></script>


<style>
    .sportsmagazine-bloglarge-text p {
        border-bottom-color: rgba(255, 255, 255, 0.00);
    }

    .sportsmagazine-bloglarge-text::before, .sportsmagazine-popular-post::before, .sportsmagazine-shop-list-text, .sportsmagazine-shop-list figure::before, .sportsmagazine-shop-list figure::after {
        background: url(/Content/extra-images/gamebackground.png?20180514);
    }

    .sportsmagazine-blog, .sportsmagazine-blog-grid figure, .sportsmagazine-blog-grid figure img, .sportsmagazine-blog-grid figure > a, .sportsmagazine-blog-grid section {
        box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.27), 4px 4px 6px rgba(0, 0, 0, 0.21), 6px 6px 12px rgba(0, 0, 0, 0);
    }
</style>


<div class="sportsmagazine-main-content">

    <!--// Main Section \\-->
    <div class="sportsmagazine-main-section sportsmagazine-bloglarge-full">
        <div class="container">
            <div class="row" id="newsrow">

                <div class="col-md-9" id="newsmargin">
                    <div class="sportsmagazine-blog sportsmagazine-bloglarge">

                        <div class="sportsmagazine-bloglarge-text">
                            @if (Model.p_class == 4)
                            {
                                <h1>@Model.manager</h1>
                            }
                            <h1 style="font-size:24px;padding:10px 0 10px 0;margin-bottom:15px;color:#fff;">@Html.DisplayFor(model => model.title)</h1>
                            <time>@Html.DisplayFor(model => model.real_time)</time>
                            <div id="jshtml">@Html.HiddenFor(model => model.content)</div>

                            @*<ul class="sportsmagazine-article-options">
                                    <li><a href="#404.html"><i class="fa fa-thumbs-o-up"></i> 0</a></li>
                                    <li><a href="#404.html"><i class="fa fa-eye"></i> 0</a></li>
                                    <li><a href="#404.html"><i class="fa fa-user"></i> @Html.DisplayFor(model => model.manager)</a></li>
                                </ul>*@
                        </div>

                    </div>

                </div>



            </div>
        </div>
    </div>
    <!--// Main Section \\-->

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            
            var content = $('#content').val();
            $('#jshtml').append(content);
            $('#jshtml img').viewer();
            $('#jshtml img').css('cursor','zoom-in');

        });
    </script>


}