@model SITW.Models.ViewModel.GuessViewModel
@{
    Layout = null;
    int i = 0;
}




    <link rel="stylesheet" type="text/css" href="/Content/Guess/style.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css" />
    <style type="text/css">
        body *, body :after, body :before {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
        }
        body {
            font-family: "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", 微软雅黑, Arial, sans-serif;
            font-size: 14px;
            line-height: 1.5;
            background-color: rgb(213, 232, 210);
            margin: 0px;

        }
        body #main-view .main-panel {
            overflow: hidden;
            padding: 24px 0 48px;
            background-color: #fff;
            border-radius: 8px;
            margin-bottom: 40px;
            height:700px;
             background: url(https://storage.googleapis.com/funbet-180608.appspot.com/studyPlace/background.png);
            background-size: contain;
            background-repeat: no-repeat;
        }
        body #main-view .main-panel .qa-header {
            padding-bottom: 16px;
            border-bottom: 1px solid #ecf0eb;
            margin-bottom: 24px;
            margin-left: 100px;
            margin-right: 100px;
           
        }
        body #main-view {
            position: relative;
            width: 980px;
            min-width: 980px;
            max-width: 100%;
            margin: 0 auto;
            z-index: 1;
        }
        body #main-view .aside-panel {
            float: right;
            width: 280px;
            margin-left: 20px;
        }
        .bottom-card-box {
            position: relative;
            padding: 20px 20px 16px;
            background-color: #fff;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        body #main-view .aside-panel .rules {
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
        }
        .question {
            width: 100%;
            padding-left: 100px;
            padding-right: 100px;
            min-height: 290px;
            opacity:0;
            display:none;
        }
        .question-number {
            color: #fff;
            font-size: 12px;
            line-height: 12px;
            margin-bottom: 8px;
            -ms-user-select: none;
            user-select: none;
            font-weight: bold;
        }
        .v-switcher {
            overflow: hidden;
            position: relative;
        }
        .question-loading h3 {
            margin-bottom: 10px;
            font-weight: 400;
            color:#fff;
        }
        #choiceColor {
            background: #bfdf54;
        }

        .question-loading h4 {
            border: 1px solid;
            border-radius: 20px;
            padding: 10px;
            margin-bottom: 10px;
            font-weight: 400;
            cursor: pointer;
            color:#000;
            background:#fff;
        }
        .v-switcher-content .v-switcher-content-panel {
            width: 800px;
            z-index: 3;
            transition-duration: 0ms;
            position: absolute;
            top:200px;
            left:130px;
            margin-bottom:200px;

        }


        #topic_bG {
            width: 100%;
            background: rgb(238, 238, 238);
            height: 3000px;
            position: absolute;
            z-index: 9999999999;
        }
        #nextgo {
            margin-top:40px;
            display: flex;
            align-items: center;
            justify-content: center;

        }


        #answer,#nextRegister,#next {
            width: 30%;
            padding: 10px;
            cursor: pointer;
            border: 10px solid #a3ff15;
            background: #9cd819;
            color: #000;
            border-radius: 5px;

        }
   
        #topic {
            position: relative;
        }
        #check {
            opacity:0;
        }
        .sbonus {
            position: absolute;
            right: 100px;
            top: 80px;
            background: url(https://storage.googleapis.com/funbet-180608.appspot.com/studyPlace/bonus_s.png);
            background-size: contain;
            background-repeat: no-repeat;
            width: 200px;
            height: 140px;
            display: flex;
            justify-content: center;

        }
        .bonust {
            font-weight: 500;
                color: #000;
                font-size: 20px;
                color: #E91E63;
                position: absolute;
                top: 20px;
        }
        .score {
            float: left;
            color: #000;
            font-size: 50px;
            margin: 40px 0px;

        }
        .bear_teacher {
            background: url(https://storage.googleapis.com/funbet-180608.appspot.com/studyPlace/bear.png);
            position: absolute;
            width: 100%;
            height: 700px;
            background-size: contain;
            background-repeat: no-repeat;
            left: -230px;
            top: 100px;
            z-index:3;
        }
        .loginfish {
            background: url(https://storage.googleapis.com/funbet-180608.appspot.com/studyPlace/login.png);
            background-repeat: no-repeat;
            background-size: contain;
            width: 500px;
            height: 200px;
            position: absolute;
            top: 95%;
            left: 100px;
            z-index:10;

        }
        .registerfish {
            background: url(https://storage.googleapis.com/funbet-180608.appspot.com/studyPlace/register.png);
            background-repeat: no-repeat;
            background-size: contain;
            width: 500px;
            height: 200px;
            position: absolute;
            top: 97%;
            left: 600px;
            z-index:10;
        }
        @@media (min-width: 1258px) and (max-width: 1340px) {
            #topic_bG {
                /*zoom:0.9;*/
            }
        }
           @@media (min-width: 1000px) and (max-width: 1258px) {
            #topic_bG {
                /*zoom:0.8;*/
            }
        }
        @@media (min-width: 768px) and (max-width: 1000px) {
            #topic_bG {
                /*zoom: 0.6;*/
              
            }
        }
                @@media (max-width: 768px) {
                    #topic_bG {
                        /*zoom: 0.4;*/
                        position:fixed;
               
                    }
                    body #main-view {
                        -webkit-transform: scale(0.5);
                        transform: scale(0.5);
                        left: -100px;
                            top: -160px;

                    }
                    .loginfish {
                        top: 100%;
                        left: 200px;

                    }
                    .registerfish {
                        top: 122%;
                        left: 215px;

                    }


                }
        @@media (max-width: 480px) {
             body #main-view {
                        -webkit-transform: scale(0.4);
                        transform: scale(0.4);
                        left: -300px;

                    }

        }


    </style>



        <div id="topic_bG">
            <div id="app-wrap">
                @* <img id="banner" src="//s1.hdslb.com/bfs/static/jinkela/newbie/asserts/entry-bg.png">*@
                <section id="main-view">
                    <main class="main-panel">
                        <div class="sbonus">
                            <span class="bonust">
                                目前累績獎金
                            </span>
                            <span class="score">
                                0
                            </span>


                        </div>
                        <div class="bear_teacher"></div>
                        <div>
                            <a class="loginfish" href="@Url.Action("Login","Account", new { log = 1 })"></a>
                            <a class="registerfish" href="@Url.Action("Register","Account")"></a>

                        </div>


                        <div id="basic-1">
                            <div class="v-switcher">
                                <div style="display: none;">
                                </div>
                                <div class="v-switcher-content-wrap v-switcher-content-swipe" style="width: 680px;height:600px; visibility: visible;">
                                    <div class="v-switcher-content" style="width: 2040px;">

                                        @foreach (var topic in Model.gtopics)
                                        {
                                            <div class="v-switcher-content-panel" id="question" data-index="@i">
                                                <div class="question">
                                                    <div class="question-number">
                                                        第 <span id="topic_i"> 1 </span>/5 題
                                                    </div>
                                                    <div class="question-loading">
                                                        <h3>@topic.title</h3>
                                                        @foreach (var choice in topic.gchoice)
                                                        {
                                                            <div id="topic">
                                                                <h4>@choice.choiceStr</h4>
                                                                @if (choice.isTrue == 1)
                                                                {
                                                                    <span id="check" style="color: #000;font-size: 30px;position: absolute;right: 20px;top: 5px;">
                                                                        <span style="font-size:14px">正解</span> <i class="fa fa-check" aria-hidden="true"></i>

                                                                    </span>
                                                                }
                                                                else
                                                                {
                                                                    <span id="check" style="color: #000;font-size: 30px;position: absolute;right: 20px;top: 5px;">
                                                                        <sapn style="font-size:14px">答錯囉!!</sapn> <i class="fa fa-times" aria-hidden="true"></i>
                                                                    </span>


                                                                }

                                                                <input type="hidden" id="istrue" value="@choice.isTrue" />
                                                            </div>
                                                        }


                                                        <div id="nextgo">
                                                            <input id="answer" style="animation-iteration-count:1;" type="button" value="確認答案" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            i++;
                                        }







                                    </div>
                                </div>
                            </div><div class="v-portal" style="display: none;"></div>
                        </div>
                    </main>
                </section>
            </div>
        </div>
  



        <script>
            $(document).ready(function () {
               
            
        var topic_c = 0;

        if (localStorage.getItem('topic') != null) {
            if ((parseInt(localStorage.getItem('topic')) - 1) == 5)
            {
                $(".question-loading h3").html("題目結束")
                $(".question-loading input[type='button']").val('註冊拿獎去');
                $(".question-loading input[type='button']").attr('id', 'nextRegister');
                $(".question-loading #topic").remove();
                $('#topic_i').text(parseInt(localStorage.getItem('topic')) - 1);
                $('.score').text(parseInt(localStorage.getItem('score')));
                $('.v-switcher-content-panel[data-index="0"]').find('.question').css('display','block');
                $('.v-switcher-content-panel[data-index="0"]').find('.question').animate({ opacity: "1" });
            } else {
                $('.v-switcher-content-panel[data-index="0"]').find('.question').css('display','block');
                $('.v-switcher-content-panel[data-index="0"]').find('.question').animate({ opacity: "1" });
                $('.score').text(parseInt(localStorage.getItem('score')));
                $('#topic_i').text(localStorage.getItem('topic'));
            }




        } else {
             $('.v-switcher-content-panel[data-index="0"]').find('.question').css('display','block');
            $('.v-switcher-content-panel[data-index="0"]').find('.question').animate({ opacity: "1" });
            localStorage.setItem('topic', 1);
            localStorage.setItem('score', 0);

        }


        //$('.v-switcher-content-panel[data-index="' + 0 + '"]').animate({ left:"-680px" });
        $(".question-loading h4").on('click', function () {
            var i = $(this).parents('.v-switcher-content-panel').attr('data-index');
            $('#topic h4').removeAttr('id');
            $(this).attr('id','choiceColor');


        });

        $('.question-loading #answer').on('click', function () {
            if ($(this).parents(".question-loading").find("#choiceColor").val() != null) {
                

                var t = parseInt(localStorage.getItem('topic')) + 1;
                localStorage.setItem('topic', t);

                if ($(this).parents(".question-loading").find("#choiceColor").parents('#topic').find('#istrue').val() == 1) {
                    $(this).parents(".question-loading").find("#choiceColor").parents('#topic').find('span').find('span').text('答對了!!');
                    $(this).parents(".question-loading").find("#choiceColor").parents('#topic').find('span').css('opacity', '1');
                    var s = parseInt(localStorage.getItem('score')) +1000;

                    localStorage.setItem('score', s);
                    $('.bear_teacher').css('background-image', 'url(https://storage.googleapis.com/funbet-180608.appspot.com/studyPlace/good_bear.png)');



                } else {
                    $(this).parents(".question-loading").find("#choiceColor").css('background', 'red')
                    $(this).parents(".question-loading").find("#choiceColor").parents('#topic').find('span').css('opacity','1')
                    $(this).parents('.question-loading').find('#istrue[value="1"]').parents('#topic').find('h4').css('background', '#54dbdf');
                    $(this).parents('.question-loading').find('#istrue[value="1"]').parents('#topic').find('span').css('opacity', '1')
                     var s = parseInt(localStorage.getItem('score')) +500;
                    localStorage.setItem('score', s);
                     $('.bear_teacher').css('background-image', 'url(https://storage.googleapis.com/funbet-180608.appspot.com/studyPlace/error_bear.png)');
                }
                


                 $('.score').text(parseInt(localStorage.getItem('score')));
                  if (localStorage.getItem('topic') == 6) {
                    $(this).parents('#nextgo').html('<input id="nextRegister" style="animation-iteration-count:1;" type="button" value="註冊拿獎去">');
                } else {
                      $(this).parents('#nextgo').html('<input id="next" style="animation-iteration-count:1;" type="button" value="下一題">');
                }
                 $('.question-loading #next').unbind('click').click(function () {
                     topic_c += 1;
                    var i = $(this).parents('.v-switcher-content-panel').attr('data-index');
                     $('.v-switcher-content-panel[data-index="' + i + '"]').animate({ opacity: "0" });
                     $('.v-switcher-content-panel[data-index="' + i + '"]').css('display','none');
                      $('.bear_teacher').css('background-image', 'url(https://storage.googleapis.com/funbet-180608.appspot.com/studyPlace/bear.png)');
                    
                    var j = parseInt(i) + 1;

                     var top = topic_c;

                     $('.v-switcher-content-panel[data-index="' + j + '"]').find('#topic_i').text(localStorage.getItem('topic'));
                     $('.v-switcher-content-panel[data-index="' + j + '"]').find('.question').css('display','block');
                     $('.v-switcher-content-panel[data-index="' + j + '"]').find('.question').animate({ opacity: 1 });
                 });
              




            } else {

                $(this).addClass('animated infinite shake');
                setTimeout(function () {$('.question-loading #answer').removeClass();},800);

               // $(this).css("animation-iteration-count", 3);
            }



        });

        $(document).on('click', '.question-loading #nextRegister', function () {
            window.location.href = '@Url.Action("Register","Account")';
             localStorage.setItem('active', 1);

        });

                $('.loginfish,.registerfish').on('click', function () {
                    localStorage.setItem('active', 1);

                });


        });

        </script>
