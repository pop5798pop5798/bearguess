
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Game</title>
    <style>
        #gameCanvas {
            width: 100%;
            /*max-width:1200px;*/
        }

        </style>
</head>
<body>
    <canvas id="gameCanvas" width="500" height="450"></canvas>
    <script type="text/javascript" src="~/Scripts/coco2d/cocos2d-js-v3.13-lite.js" charset="UTF-8"></script>
    <script type="text/javascript">
        window.onload = function () {
            cc.game.onStart = function () {
                //load resources
                cc.LoaderScene.preload(["https://storage.googleapis.com/funbet-180608.appspot.com/Banners/20190102/banner-phone.jpg?012129"], function () {
                    var MyScene = cc.Scene.extend({
                        onEnter: function () {
                            this._super();
                            var size = cc.director.getWinSize();
                            var sprite = cc.Sprite.create("https://storage.googleapis.com/funbet-180608.appspot.com/Banners/20190102/banner-phone.jpg?012129");
                            sprite.setPosition(size.width / 2, size.height /2);
                            sprite.setScale(0.8);
                            this.addChild(sprite, 0);

                            var label = cc.LabelTTF.create("Hello World", "Arial", 40);
                            label.setPosition(size.width / 2, size.height / 3);
                            this.addChild(label, 1);
                        }
                    });
                    cc.director.runScene(new MyScene());
                }, this);
            };
            cc.game.run("gameCanvas");
        };
    </script>
</body>
</html>


