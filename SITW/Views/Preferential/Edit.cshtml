@model SITW.Models.Preferential

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
@using SITW.Helper
<style>
    input[type="text"] {
        height: auto;
    }

    #cke_10 {
        display: none;
    }
</style>



<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> 優惠管理</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    @if (Model.id == 2)
                    {
                        <h4 class="mb"><i class="fa fa-angle-right"></i> 全部商品優惠活動</h4>

                    }
                    else
                    {
                        <h4 class="mb"><i class="fa fa-angle-right"></i> 優惠修改區</h4>
                    }

                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal style-form", @id = "pdForm", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.id)
                            @Html.HiddenFor(model => model.vaild)
                            @Html.HiddenFor(model => model.offerModel)

                            <div class="form-group">
                                <div class="col-sm-2 col-sm-2 control-label">
                                    <h4>優惠活動名稱</h4>
                                </div>
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.Pname, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Pname, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group" id="priceid">

                                <label class="col-sm-2 col-sm-2 control-label">優惠(%)</label>
                                <div class="col-sm-2">
                                    @Html.EditorFor(model => model.offer, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.offer, "", new { @class = "text-danger" })
                                </div>
                                <div id="automoney"></div>

                            </div>



                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">優惠商品</label>
                                <div class="col-sm-5">
                                    @if (Model.id == 2)
                                    {
                                        <span>商城全部商品</span>
                                    }
                                    else
                                    {
                                        @Html.ProductAllSelect("productId", Model.productId)
                                        @Html.ValidationMessageFor(model => model.productId, "", new { @class = "text-danger" })
                                    }
                                </div>

                            </div>




                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">優惠開始時間</label>

                                <div class="col-sm-5">

                                    @Html.EditorFor(model => model.sdate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.sdate, "", new { @class = "text-danger" })

                                </div>

                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">優惠結束時間</label>

                                <div class="col-sm-5">

                                    @Html.EditorFor(model => model.edate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.edate, "", new { @class = "text-danger" })

                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="修改" class="btn btn-success btn-sm pull-left" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("返回", "Index")
                    </div>
                </div>
            </div>
        </div>

    </section>
</section>

